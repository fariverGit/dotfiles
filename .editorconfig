root = true

[*]
indent_style = space
indent_size = 4
tab_width = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{h,hpp,c,cpp}]
indent_size = 2

[*.lua]
indent_size = 2

[Makefile]
indent_style = tab

[*.js]
indent_size = 2

[*.html]
indent_size = 2

[*.{scc,less,sass,scss}]
indent_size = 2

[*.go]
indent_style = tab

[*.rb]
indent_size = 2
